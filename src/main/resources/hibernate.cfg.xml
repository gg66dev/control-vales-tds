<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">*****</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost/control_vales</property>
        <property name="hibernate.connection.username">******</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
    	<property name="connection.pool_size">1</property>
    	<property name="show_sql">false</property>
        <property name="hbm2ddl.auto">none</property>
        
        <mapping class="cl.tds.controlvales.beans.Usuario" />
        <mapping class="cl.tds.controlvales.beans.Vale" />
        <mapping class="cl.tds.controlvales.beans.Empresa" />
        
    </session-factory>
</hibernate-configuration>
